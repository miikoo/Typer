# Use the official ASP.NET Core runtime as a parent image
FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

# Use the official ASP.NET Core SDK as a parent image for building
FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
COPY ["Typer.API/Typer.API.csproj", "Typer.API/"]
RUN dotnet restore "Typer.API/Typer.API.csproj"
COPY . .
WORKDIR "/Typer.API"
RUN dotnet build "Typer.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Typer.API.csproj" -c Release -o /app/publish

# Final image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "YourApiProject.dll"]
